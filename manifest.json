{
  "manifest_version": 2,
  "name": "Bamb!",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "catgifs@mozilla.org"
    }
  },
  "icons": {
    "48": "bamboude2.png",
    "128": "bamboude3.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "http://*/*",
   "https://*/*",
   "tabs"
  ],

  "browser_action": {
    "default_icon": {
      "19": "bamboude1.png",
      "38": "bamboude.png"
    },
    "default_title": "Bamboo!",
    "default_popup": "choose_beast.html"
  }
}
